              }
            }
          ],
          "responses": {
            "200": {
              "description": "OK"
            },
            "400": {
              "description": "Invalid request data"
            }
          }
        }
      },
      "/translate": {
        "post": {
          "description": "Translate a term",
          "tags": [
            "translation"
          ],
          "consumes": [
