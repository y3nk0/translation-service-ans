          ],
          "produces": [
            "application/json"
          ],
          "parameters": [
            {
              "name": "file",
              "in": "formData",
              "description": "file to upload",
              "required": false,
              "type": "file"
            }
          ],
          "responses": {
            "200": {
              "description": "OK"
            },
            "400": {
              "description": "Invalid request data"
            }
          }
        }
      }
