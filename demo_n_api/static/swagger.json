    "paths": {
      "/get_suggestion": {
        "post": {
          "description": "Get a suggested translation for a term",
          "tags": ["suggestion"],
          "consumes": [
            "application/json"
          ],
          "produces": [
            "application/json"
          ],
          "parameters": [
            {
              "name": "translation data",
              "in": "body",
              "description": "JSON data for the api",
              "required": true,
              "schema": {
                "$ref": "#/definitions/suggestion"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "File successfully sent!"
            },
            "400": {
              "description": "Invalid request data"
            }
          }
        }
      },
      "/store": {
